@inject NavigationManager Navigation

@if (Duplicates.Count > 0)
{
    <div class="alert alert-warning" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle-fill me-2 mt-1 flex-shrink-0"></i>
            <div class="flex-grow-1">
                <h6 class="alert-heading mb-2">
                    Potential Duplicate@(Duplicates.Count > 1 ? "s" : "") Detected
                </h6>
                <p class="mb-2 small">
                    @if (Duplicates.Count == 1)
                    {
                        <text>A similar citation already exists in your library:</text>
                    }
                    else
                    {
                        <text>@Duplicates.Count similar citations already exist in your library:</text>
                    }
                </p>

                <div class="list-group list-group-flush">
                    @foreach (var duplicate in Duplicates.Take(3))
                    {
                        <div class="list-group-item list-group-item-warning p-2">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1 me-2">
                                    <div class="fw-medium small">@duplicate.Citation.Title</div>
                                    <div class="text-muted" style="font-size: 0.75rem;">
                                        @if (duplicate.Citation.Authors.Count > 0)
                                        {
                                            <span>@string.Join(", ", duplicate.Citation.Authors.Take(2))@(duplicate.Citation.Authors.Count > 2 ? " et al." : "")</span>
                                        }
                                        @if (duplicate.Citation.Year.HasValue)
                                        {
                                            <span> (@duplicate.Citation.Year)</span>
                                        }
                                    </div>
                                    <div class="mt-1">
                                        <span class="badge @GetConfidenceBadgeClass(duplicate.Confidence)">
                                            @duplicate.ReasonDescription
                                        </span>
                                    </div>
                                </div>
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary flex-shrink-0"
                                        @onclick="() => ViewCitation(duplicate.Citation.Id)"
                                        title="View existing citation">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>

                @if (Duplicates.Count > 3)
                {
                    <p class="small text-muted mt-2 mb-0">
                        And @(Duplicates.Count - 3) more potential match@(Duplicates.Count - 3 > 1 ? "es" : "")...
                    </p>
                }

                <div class="mt-3 d-flex gap-2 flex-wrap">
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="Dismiss">
                        <i class="bi bi-x-lg me-1"></i>
                        Dismiss Warning
                    </button>
                    @if (ShowAddAnyway)
                    {
                        <span class="text-muted small align-self-center">
                            You can still add this citation if it's not a duplicate.
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    /// <summary>
    /// List of potential duplicate matches to display.
    /// </summary>
    [Parameter]
    public List<DuplicateMatch> Duplicates { get; set; } = new();

    /// <summary>
    /// Whether to show the "add anyway" messaging.
    /// </summary>
    [Parameter]
    public bool ShowAddAnyway { get; set; } = true;

    /// <summary>
    /// Callback when the user dismisses the warning.
    /// </summary>
    [Parameter]
    public EventCallback OnDismiss { get; set; }

    private void ViewCitation(Guid id)
    {
        Navigation.NavigateTo($"/citations/{id}");
    }

    private async Task Dismiss()
    {
        await OnDismiss.InvokeAsync();
    }

    private static string GetConfidenceBadgeClass(double confidence)
    {
        return confidence switch
        {
            >= 0.95 => "bg-danger",
            >= 0.85 => "bg-warning text-dark",
            >= 0.70 => "bg-info text-dark",
            _ => "bg-secondary"
        };
    }
}

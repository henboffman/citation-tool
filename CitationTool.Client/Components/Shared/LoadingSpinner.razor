@if (IsLoading)
{
    <div class="d-flex justify-content-center align-items-center py-5" role="status">
        <div class="spinner-border @SizeClass text-primary" aria-hidden="true">
            <span class="visually-hidden">@Message</span>
        </div>
        @if (ShowMessage)
        {
            <span class="ms-3 text-muted">@Message</span>
        }
    </div>
}

@code {
    [Parameter] public bool IsLoading { get; set; } = true;
    [Parameter] public string Message { get; set; } = "Loading...";
    [Parameter] public bool ShowMessage { get; set; } = true;
    [Parameter] public SpinnerSize Size { get; set; } = SpinnerSize.Default;

    private string SizeClass => Size switch
    {
        SpinnerSize.Small => "spinner-border-sm",
        SpinnerSize.Large => "",
        _ => ""
    };

    public enum SpinnerSize
    {
        Small,
        Default,
        Large
    }
}
